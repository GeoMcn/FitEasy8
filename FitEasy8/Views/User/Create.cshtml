                                           value="@exercisePlan.ExercisePlanID"
                                           @(Html.Raw(exercisePlan.Assigned ? "checked=\"checked\"" : "")) />
                                        @exercisePlan.ExercisePlanID @:  @exercisePlan.Title
                                        @:</td>
                            }
                            @:</tr>
                        }
                    </table>

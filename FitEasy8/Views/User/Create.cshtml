                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<FitEasy8.ViewModels.AssignedExercisePlanData> exercisePlans = ViewBag.ExercisePlans;

                            foreach (var exercisePlan in exercisePlans)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
